<tr class="<%= @task.completed ? "opacity-50" : "" %>" data-id="<%= @task.id %>">
  <td><%= @task.date.strftime "%d/%m/%y" %></td>
  <td><%= @task.time %></td>
  <td><%= @task.content %></td>
  <td class="d-flex gap-4 justify-content-end align-items-center">
    <a class="color-dark-green text-decoration-none mx-2">👍</a>
    <i data-id="<%= @task.id %>" data-action="click->drag#conclude" class="<%= @task.completed ? "far fa-check-square" : "far fa-square" %>" id="logo-checkbox"></i>
    <%= link_to edit_task_path(@task), class: "text-decoration-none" do %>
      <i class="fas fa-edit" id="logo-edit"></i>
    <% end %>
    <%= button_to task_path(@task), method: :delete, class: "text-danger me-2", data: { turbo: false, controller: 'sweetalert', action: 'click->sweetalert#showAlert' } do %>
      <i class="fas fa-trash-alt" id="logo-trash"></i>
    <% end %>
  </td>
</tr>
