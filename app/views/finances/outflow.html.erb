<h1><strong>Suas Finanças</strong></h1>

<h2><strong>Entradas</strong></h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Data</th>
      <th scope="col">Descrição</th>
      <th scope="col">Valor (R$)</th>
    </tr>
  </thead>
  <% @inflows.each_with_index do |inflow, index| %>
    <tbody>
      <tr>
        <th scope="row"><%= index %></th>
        <td><%= inflow.date %></td>
        <td><%= inflow.description %></td>
        <td><%= inflow.value %></td>
        <%= link_to "Editar", edit_finance_path(inflow), class: "btn btn-primary" %>
        <%= link_to "Deletar", finance_path(inflow), class: "btn btn-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this product?" } %>
      </tr>
    </tbody>
  <% end %>

</table>
