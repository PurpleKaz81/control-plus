<%= simple_form_for @finance, html: { data: { controller: 'money', action: 'submit->money#formatMoney' } } do |f| %>
  <div class="form-inputs row">
    <%= f.input :description, label: 'Descrição', placeholder: "Descreva sua Entrada" %>
  <div class="col-6">
    <%= f.input :date, label: 'Data', placeholder: "Selecione a Data", as: :string, input_html: { type: "date" } %>
  </div>
    <div class="col-6">
      <%= f.input :category, collection: %w[Entrada Saída], prompt: "Selecione a categoria", label: 'Categoria', selected: "Entrada" %>
    </div>
    <div class="col-6">
      <%= f.input :value, label: 'Valor (R$)', placeholder: "Digite o Valor", input_html: { value: @finance.value.present? ? '%.2f' % @finance.value : '', type: 'text', data: { money_target: 'input', action: 'input->money#format' } } %>
    </div>
  </div>
  <div class="form-actions mt-4">
    <%= link_to 'Cancelar', inflow_finances_path, class: "btn btn2" %>
    <%= f.button :submit, "Salvar", class: "btn btn1" %>
  </div>
<% end %>
