<%= link_to "Back", :back, class: "btn btn-primary" %>
<%= link_to "Saídas", outflow_finances_path, class: "btn btn-primary" %>

<h1>Suas Finanças</h1>

<h2>Entradas</h2>
<table class="table table-striped table-hover">
  <% finances.each do |finance| %>
   <thead>
    <tr>
      <th scope="col">Data</th>
      <th scope="col">Descrição</th>
      <th scope="col">Valor (R$)</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><%= finance.inflow.date %></td>
      <td><%= finance.inflow.description %></td>
      <td><%= finance.inflow.value %></td>
    </tr>
    <tr>
      <th scope="row">2</th>
      <td>Jacob</td>
      <td>Thornton</td>
      <td>@fat</td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td colspan="2">Larry the Bird</td>
      <td>@twitter</td>
    </tr>
  </tbody>

  <%= link_to "Editar", edit_finance_path(), class: "btn btn-primary" %>
  <%= link_to "Deletar", finance_path(), class: "btn btn-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this product?" } } %>
</table>
