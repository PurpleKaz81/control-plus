<%= link_to "Saídas", outflow_finances_path, class: "btn btn-primary col-2" %>


<div class="container">
  <h1><strong>Suas Finanças</strong></h1>
  <h2><strong>Entradas</strong></h2>
  <table class="table table-striped table-hover">
    <thead class="thead">
      <tr>
        <th scope="col"></th>
        <th scope="col">Data</th>
        <th scope="col">Descrição</th>
        <th scope="col">Valor (R$)</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <% @inflows.each_with_index do |inflow, index| %>
      <tbody>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= inflow.date %></td>
          <td><%= inflow.description %></td>
          <td><%= inflow.value %></td>
          <td><%= link_to edit_finance_path(inflow), class: "text-success mx-2" do %>
              <i class="fas fa-edit" id="logo-edit"></i>
            <% end %></td>
          <td><%= link_to finances_path(inflow), class: "text-danger mx-2", data: {turbo_method: :delete, turbo_confirm: "Você quer mesmo deletar?"} do %>
              <i class="fas fa-trash-alt" id="logo-trash"></i>
            <% end %></td>
        </tr>
      </tbody>
    <% end %>
  </table>

  <div class="totals mb-2">
    <p>Total de Entradas</p>
    <div class="row col-4">
      <div class="card-body">
        <p>R$ <%= @inflow_sum %></p>
      </div>
    </div>

    <p class="mt-2 mb-2">Seu Total</p>
    <div class="row col-4 mt-2">
      <div class="card-body">
        <p>R$ <%= @total %></p>
      </div>
    </div>

    <%= link_to "Nova Entrada", new_finance_path, class: "btn btn1 col-2 mt-3" %>
  </div>
</div>
