<div class="container">
<div class="d-flex justify-content-center row w-100">
  <div class="col-12 col-md-6 mt-4">
    <h1 class="text-center">Tarefas</h1>

    <div class="d-flex justify-content-center row w-100">
      <%= form_with url: tasks_path, method: :get, class: "search-bar d-flex col-6" do %>
        <%= text_field_tag :search,
          params[:search],
          class: "form-control",
          type: "search",
          name: "search",
          required: false %>
        <%= button_tag type: :submit, class: "search-btn" do %>
          <span>Search</span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="d-flex justify-content-end mb-1">
    <%= link_to "Nova tarefa", new_task_path, class: "btn btn1 mb-2 mx-0" %>
  </div>


  <table class="table table-striped table-hover">
      <thead class="thead">
        <tr>
          <th scope="col" class="w-8rem">Data</th>
          <th scope="col" class="w-8rem">Hora</th>
          <th scope="col">Tarefas</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
        <tbody data-controller="drag" data-drag-url="/tasks/:id/move">
      <% @tasks.order(position: :asc).each do |task| %>
          <tr data-id="<%= task.id %>">
            <td><%= task.date.strftime "%d/%m/%Y" %></td>
            <td><%= task.time %></td>
            <td><%= task.content %></td>

            <td class="text-end w-50"><%= link_to edit_task_path(task), class: "text-success" do %>
              <i class="fas fa-edit" id="logo-edit"></i>
            <% end %></td>
            <td><%= link_to task_path(task), class: "text-danger", data: {turbo_method: :delete, turbo_confirm: "VocÃª quer mesmo deletar?"} do %>
              <i class="fas fa-trash-alt" id="logo-trash"></i>
            <% end %></td>
          </tr>
      <% end %>
        </tbody>
    </table>
            <p class="mb-5">Obs: Para ordenar suas tarefas, clique e arraste para a ordem desejada.</p>
  </div>
