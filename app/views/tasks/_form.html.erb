<%= simple_form_for(@task) do |f| %>
  <div class="form-inputs">
    <%= f.input :content, placeholder: "Descreva sua Tarefa" %>
    <%= f.input :date, placeholder: "Digite Aqui a Data de sua Tarefa" %>
    <%= f.input :order, placeholder: "Defina a Prioridade da Tarefa" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
