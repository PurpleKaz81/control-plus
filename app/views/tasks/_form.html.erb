<%= simple_form_for(@task) do |f| %>
  <div class="form-inputs">
    <%= f.input :content, placeholder: "Descreva sua tarefa" %>
    <%= f.input :date, placeholder: "Coloque a data" %>
  </div>

  <div class="col-4 ">
    <%= f.input :order, placeholder: "Defina sua prioridade" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn1" %>
  </div>
<% end %>
